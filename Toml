name = "rmp-agiweb-worker" # Cambia esto por el nombre de tu Worker
main = "worker.js"
compatibility_date = "2025-11-18" # Usa la fecha actual

# ============== CONFIGURACIÓN DE CRON (SCHEDULED) ==============
[triggers]
crons = ["*/15 * * * *"] # Ejecuta el Worker cada 15 minutos (ajusta según necesites)

# ============== LIBRERÍAS EXTERNAS (Dependencias) ==============
# Cloudflare Workers requiere que especifiques las dependencias que usas.
# Si tu worker.js no usa ethers ni ninguna otra, esta sección se puede eliminar.

# Si decides usar ethers de nuevo:
# [build]
# command = "npm install"
# [vars]
# NODE_VERSION = "20"
# EXTERNAL_DEPENDENCIES = ["ethers"]


